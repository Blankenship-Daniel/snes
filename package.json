{
  "name": "zelda3-workspace",
  "version": "1.1.1",
  "description": "The 30-second ROM mod experience for The Legend of Zelda: A Link to the Past",
  "private": true,
  "main": "scripts/zelda3-modder-demo.sh",
  "bin": {
    "zelda3-modder": "./scripts/zelda3-modder-demo.sh"
  },
  "scripts": {
    "ws:list": "yarn workspaces list",
    "ws:build": "yarn workspaces foreach -A run build",
    "ws:test": "yarn workspaces foreach -A run test",
    "ws:ci:build": "yarn ws:build",
    "ws:ci:test": "yarn ws:test || true",
    "health:monorepo": "bash ./scripts/monorepo-health.sh",
    "clean:dead-code": "knip",
    "clean:dead-code:export": "knip --reporter json > knip-report.json",
    "demo": "./scripts/zelda3-modder-demo.sh ultimate",
    "deps:check": "npm-check-updates",
    "deps:fix": "syncpack fix-mismatches",
    "deps:format": "syncpack format",
    "deps:sync": "syncpack list-mismatches",
    "deps:unused": "depcheck",
    "deps:update": "npm-check-updates -u",
    "deps:update:interactive": "npm-check-updates --interactive --format group",
    "lint:paths": "bash ./tools/check-no-absolute-paths.sh",
    "mcp:health": "bash ./scripts/mcp-healthcheck.sh",
    "organize": "npm run deps:sync && npm run deps:format && npm run clean:dead-code",
    "organize:fix": "npm run deps:fix && npm run deps:format",
    "postversion": "git push && git push --tags",
    "prepare": "husky",
    "preversion": "bash -n scripts/zelda3-modder-demo.sh scripts/validate-mods.sh scripts/ultimate-runtime-validation.sh",
    "release:version:major": "npm version major -m \"chore(release): %s\"",
    "release:version:minor": "npm version minor -m \"chore(release): %s\"",
    "release:version:patch": "npm version patch -m \"chore(release): %s\"",
    "start": "./scripts/zelda3-modder-demo.sh",
    "test": "./scripts/validate-mods.sh",
    "validate": "./scripts/validate-mods.sh"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "depcheck": "1.4.7",
    "husky": "9.1.7",
    "knip": "5.66.1",
    "lint-staged": "16.2.4",
    "npm-check-updates": "19.1.1",
    "prettier": "3.3.3",
    "syncpack": "13.0.4",
    "typescript": "^5.8.3"
  },
  "author": "SNES Modding Team",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "scripts/zelda3-modder-demo.sh",
    "scripts/validate-mods.sh",
    "scripts/ultimate-runtime-validation.sh",
    "scripts/mcp-healthcheck.sh",
    "README.md",
    "docs/DEMO_SCRIPT.md",
    "repos/snes-modder/*.smc"
  ],
  "homepage": "https://github.com/snes-modding/zelda3-modder#readme",
  "keywords": [
    "gaming",
    "link-to-the-past",
    "mod",
    "modding",
    "nintendo",
    "retro",
    "rom",
    "snes",
    "zelda"
  ],
  "license": "MIT",
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "packageManager": "yarn@4.5.1",
  "preferGlobal": true,
  "repository": "snes-modding/zelda3-modder.git",
  "workspaces": [
    "repos/snes-modder",
    "repos/zelda3-disasm",
    "repos/bsnes-plus/zelda3_save_tool_mvp"
  ]
}
